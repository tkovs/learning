<h1>New Article</h1>

<%= form_with scope: :article, local: true, url: articles_path do |form| %>
<p>
    <%= form.label :title %>
    <%= form.text_field :title %>
</p>

<p>
    <%= form.label :text %>
    <%= form.text_area :text %>
</p>

<p>
    <%= form.submit %>
</p>
<% end %>

<%= link_to 'Back', articles_path %>